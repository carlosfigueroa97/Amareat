<?xml version="1.0" encoding="UTF-8" ?>
<base:BasePopupPage
    xmlns:base="clr-namespace:Amareat.Components.Popups.Base"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pancake="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
    x:Class="Amareat.Components.Popups.Add.AddPopup">
    <pancake:PancakeView
        Style="{StaticResource MenuPopupPancake}">
        <StackLayout>
            <Label 
		        Text="Agregar Usuario" 
		        Style="{StaticResource NormalPopupLabel}">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer
			            Command="{Binding TapCommand}"
			            CommandParameter="User"/>
                </Label.GestureRecognizers>
            </Label>
            <BoxView Style="{StaticResource SeparatorLinePopup}"/>

            <Label 
		        Text="Agregar Edificio"
		        Style="{StaticResource NormalPopupLabel}">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer
			            Command="{Binding TapCommand}"
			            CommandParameter="Building"/>
                </Label.GestureRecognizers>
            </Label>
            <BoxView Style="{StaticResource SeparatorLinePopup}"/>

            <Label 
		        Text="Agregar Sala"
		        Style="{StaticResource NormalPopupLabel}">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer
			            Command="{Binding TapCommand}"
			            CommandParameter="Room"/>
                </Label.GestureRecognizers>
            </Label>
            <BoxView Style="{StaticResource SeparatorLinePopup}"/>

            <Label 
		        Text="Agregar Dispositivo"
		        Style="{StaticResource NormalPopupLabel}">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer
			            Command="{Binding TapCommand}"
			            CommandParameter="Device"/>
                </Label.GestureRecognizers>
            </Label>
            <BoxView Style="{StaticResource SeparatorLinePopup}"/>

            <Label 
		        Text="Cancelar"
		        Style="{StaticResource CancelPopupLabel}">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer
			            Command="{Binding TapCommand}"
			            CommandParameter="Cancel"/>
                </Label.GestureRecognizers>
            </Label>
            <BoxView Style="{StaticResource SeparatorLinePopup}"/>
        </StackLayout>
    </pancake:PancakeView>
</base:BasePopupPage>
